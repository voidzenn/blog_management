<% @posts && @posts.each do |post| %>
  <div data-posts--content-target="postClick" data-slug="<%= post.slug %>" data-action="click->posts--content#handle_click">
    <%= render partial: "shared/components/card", locals: { 
      data: { 
        content: "<div class='card-body w-full'>
                  <p class='text-black font-bold'>
                    #{post.title}
                  </p>
                  <p>
                    #{post.content.split[0..20].join(' ') + "..."}
                  </p>
                </div>".html_safe
      }
    }
    %>
  </div>
<% end %>

